
@model pet_box.ViewModels.SingleBuyViewModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">

    <div class="row">

        <div class="col-md-3">
            <br />

            <div class="list-group">

                <ul class="list-group">
                    <li class="list-group-item" style="background-color:coral;text-align:center"><a href="http://localhost:49732/Customer/Index"><span class="glyphicon glyphicon-camera" style="font-size:17px;color:black">監控系統</span></a> </li>
                    <li class="list-group-item" style="font-size:15px;color:black;text-align:center">一般鏡頭</li>
                    <li class="list-group-item" style="font-size:15px;color:black;text-align:center">廣角鏡頭</li>
                    <li class="list-group-item" style="font-size:15px;color:black;text-align:center">紅外線鏡頭</li>
                </ul>

                <ul class="list-group">
                    <li class="list-group-item" style="background-color:coral;text-align:center"><a href="http://localhost:49732/Customer/Index2"><span class="glyphicon glyphicon-glass" style="font-size:17px;color:black">自動飼料餵食器</span></a> </li>
                    <li class="list-group-item" style="font-size:15px;color:black;text-align:center">小型自動飼料餵食器</li>
                    <li class="list-group-item" style="font-size:15px;color:black;text-align:center">中型自動飼料餵食器</li>
                </ul>

                <ul class="list-group">
                    <li class="list-group-item" style="background-color:coral;text-align:center"><a href="http://localhost:49732/Customer/Index3"><span class="glyphicon glyphicon-dashboard" style="font-size:17px;color:black">感測器</span></a> </li>
                    <li class="list-group-item" style="font-size:15px;color:black;text-align:center">溫濕度感測器</li>
                    <li class="list-group-item" style="font-size:15px;color:black;text-align:center">壓力感測器</li>
                </ul>

            </div>
        </div>

        <div class="col-md-9">



            <div>
                <br />
            </div>

            <div class="row">
                @* show the products in categoryID == 2:*@
                @for (int i = 0; i < Model.CategoryProductModelDic["categoryId03"].Products.Count(); i++) {
                    <div class="col-sm-4 col-lg-4 col-md-4">
                        <div class="thumbnail">
                            <img src="@Model.CategoryProductModelDic["categoryId03"].Products[i].ProductImageLocation" alt="" style="width:400px;height:200px;" class="img-rounded">
                            <div class="caption">
                                <h4 class="pull-right">$@Model.CategoryProductModelDic["categoryId03"].Products[i].ProductPrice.ToString("F0")</h4>


                                <h4>
                                    <a href="#">@Model.CategoryProductModelDic["categoryId03"].Products[i].ProductName</a>
                                </h4>
                                <p>@Model.CategoryProductModelDic["categoryId03"].Products[i].ProductDescription</p>
                            </div>
                            <div class="ratings">

                                <form action="/OptionalItem/SingleBuy/@Model.CategoryProductModelDic["categoryId03"].Products[i].ProductID" method="post">

                                    數量 <input type="number" id="quantity" name="buyQuantity"
                                              placeholder="please input quantity" step="1" min="1" max=""
                                              value="1" />

                                    <p>
                                        <button id="singlebutton" name="singlebutton" class="btn btn-primary">
                                        <span class="glyphicon glyphicon-shopping-cart"></span> 
                                        加入購物車
                                        </button>

                                    </p>
                                </form>

                            </div>
                        </div>
                    </div>


                }


            </div>

        </div>

    </div>

</div>

<div class="container">

    <hr>

    <footer>
        <div class="row">
            <div class="col-lg-12">
                <p>PetBox &copy; 2018</p>
            </div>
        </div>
    </footer>

</div>

<script src="js/jquery.js"></script>

<script src="js/bootstrap.min.js"></script>