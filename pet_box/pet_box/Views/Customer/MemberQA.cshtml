@model pet_box.Models.Opinion
@{
    ViewBag.Title = "MemberQA";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}



<form method="post">

    <div class="container">

        <div class="col-lg-3" style="left:10px;top:20px;">

            <h2 style="color:coral">會員專區</h2>
            <br />

            <a href="/Customer/MemberEdit/@Model.CustomerID" class="btn btn-primary btn-md"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>&nbsp;&nbsp;<span style="font-size:20px;">修改資料</span></a><br />
            <br />
            <a href="/Customer/MemberQA" class="btn btn-primary btn-md"><span class="glyphicon glyphicon-envelope" aria-hidden="true"></span>&nbsp;&nbsp;<span style="font-size:20px;">聯絡客服</span></a>
            <br />
            <br />
            <a href="/Customer/Memberselect/@Model.CustomerID" class="btn btn-primary btn-md"><span class="glyphicon glyphicon-envelope" aria-hidden="true"></span>&nbsp;&nbsp;<span style="font-size:20px;">查看回應</span></a>
            @*<a href="/Customer/MemberSee/@Model.CustomerID" class="btn btn-primary btn-md"><span class="glyphicon glyphicon-envelope" aria-hidden="true"></span>&nbsp;&nbsp;<span style="font-size:20px;">查看回應</span></a>*@


        </div>

        <br />


        <div style="text-align:center; left:100px;" class="col-lg-3">


            <h2 style="text-align:center;color:red">聯絡客服</h2>

            <br />

            @Html.HiddenFor(model => model.OpinionID)
            @Html.HiddenFor(model => model.OpinionDateTime)

            <h4> 問題標題:</h4><input type="text" id="title" name="OpinionTitle" style="font-size:30px;border:2px inset black" /><br />

            <br />
            <h4>請輸入內容:</h4>
            <textarea id="OpinionContent" name="OpinionContent" style="font-size:20px;border:2px solid black" placeholder="" rows="10" cols="100"></textarea><br />

            <input type="hidden" name="OpinionStatus" value="0" />
            <input type="hidden" name="EmployeeID" value="1" />

            <input type="hidden" name="CustomerID" value="@Session["CustomerID"]" />
            <input type="hidden" name="ProductID" value="1" />

            <br />

            <input type="submit" class="btn btn-success btn-lg" value="送出" />

        </div>

        <div class="col-lg-4" style="left:250px;">

            <h3 style="color:coral;color:coral">聯絡客服</h3>
            <br />
            <h4 style="color:red;">步驟一 問題發問 </h4>
            <h4>向客服人員，提出目前的問題</h4>
            <br />
            <h4 style="color:red;">步驟二 等待客服回應 </h4>
            <h4>於聯絡客服查看，目前問題是否處理</h4>
            <br />
            <h4 style="color:red;">三 查看回應 </h4>
            <h4>查看客服回應問題的狀況</h4>
            <br />

            <img src="~/product_images/site_product/product/service.jpg" width="300" height="200" />


        </div>

    </div>

</form>


<button id="autoFillButton" class="myInvisibleButtionClass" type="button" onclick="OneKeyFillFun();">一鍵搞定</button>



<script>
        function OneKeyFillFun() {

            document.getElementById("title").value = "找不到商品";
            document.getElementById("OpinionContent").value = "之前看到的商品，現在找不到了，不了解是什麼狀況";

        }


</script>





