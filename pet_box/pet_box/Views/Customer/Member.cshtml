@model pet_box.Models.Customer
@{
    ViewBag.Title = "Member";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}




<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" type="text/css" href="assets/css/bootstrap.css">
    <!-- Website CSS style -->
    <link rel="stylesheet" type="text/css" href="assets/css/main.css">
    <!-- Website Font style -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.1/css/font-awesome.min.css">

    <!-- Google Fonts -->
    <link href='https://fonts.googleapis.com/css?family=Passion+One' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Oxygen' rel='stylesheet' type='text/css'>
</head>

<style>
    body, html {
        height: 100%;
        background-repeat: no-repeat;
        background-color: white;
        font-family: 'Oxygen', sans-serif;
    }

    .main {
        margin-top: 10px;
    }

    hr {
        width: 10%;
        color: #fff;
    }

    .form-group {
        margin-bottom: 15px;
    }

    label {
        margin-bottom: 15px;
    }

    input,
    input::-webkit-input-placeholder {
        font-size: 11px;
        padding-top: 3px;
    }

    .main-login {
        background-color: #fff;
        /* shadows and rounded borders */
        -moz-border-radius: 2px;
        -webkit-border-radius: 2px;
        border-radius: 2px;
        -moz-box-shadow: 0px 2px 2px rgba(0, 0, 0, 0.3);
        -webkit-box-shadow: 0px 2px 2px rgba(0, 0, 0, 0.3);
        box-shadow: 0px 2px 2px rgba(0, 0, 0, 0.3);
    }

    .main-center {
        margin-top: 1px;
        margin: 0 auto;
        max-width: 330px;
        padding: 1px 1px;
    }

    .login-button {
        margin-top: 1px;
    }

    .login-register {
        font-size: 11px;
        text-align: center;
    }
</style>

<form method="post">

    <div class="container">

        <div class="col-lg-4" style="left:65px;top:20px;">

            <h3 style="color:coral;">會員頁介紹</h3>
            <br />
            <h4 style="color:red;">一 修改資料 </h4>
            <h4>點擊進行基本資料編輯</h4>
            <br />
            <h4 style="color:red;">二 聯絡客服 </h4>
            <h4>遇到任何問題，歡迎聯絡客服人員</h4>
            <br />
            <h4 style="color:red;">三 查看回應 </h4>
            <h4>查看客服回應問題的狀況</h4>
            <br />

            <img src="http://webservice.pfamily.com.tw/images/btn_member.jpg" width="250" height="200" />

        </div>

        <br />


        <div style="text-align:center; left:80px;" class="col-lg-4">

            <h2 style="color:red">會員專區</h2>
            <br />

            <a href="http://localhost:49732/Customer/MemberEdit/@Model.CustomerID" class="btn btn-primary btn-md"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>&nbsp;&nbsp;<span style="font-size:20px;">修改資料</span></a><br />
            <br />
            <a href="http://localhost:49732/Customer/MemberQA" class="btn btn-danger btn-md"><span class="glyphicon glyphicon-envelope" aria-hidden="true"></span>&nbsp;&nbsp;<span style="font-size:20px;">聯絡客服</span></a>
            <br />
            <br />
            <a href="http://localhost:49732/Customer/Memberselect/@Model.CustomerID" class="btn btn-primary btn-md"><span class="glyphicon glyphicon-envelope" aria-hidden="true"></span>&nbsp;&nbsp;<span style="font-size:20px;">查看回應</span></a>
            @*<a href="http://localhost:49732/Customer/MemberSee/@Model.CustomerID" class="btn btn-primary btn-md"><span class="glyphicon glyphicon-envelope" aria-hidden="true"></span>&nbsp;&nbsp;<span style="font-size:20px;">查看回應</span></a>*@

        </div>

        <div class="col-lg-4" style="left:150px;">

            <h3 style="color:coral;">會員專屬客製化設計</h3>

            <h3 style="color:red;">一.專屬寵物屋</h3>
            <br />

            <img src="~/product_images/site_product/product/box_small.jpg" style="right;" width="250" height="200" />

            <h3 style="color:red;">二.專屬客製化配備</h3>

            <br />

            <img src="~/product_images/site_product/product/cam_wide.jpg" style="right;" width="250" height="200" />


        </div>

    </div>

</form>







