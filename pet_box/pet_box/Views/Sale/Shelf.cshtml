
@{
    ViewBag.Title = "Shelf";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

@model List<pet_box.Models.Product>

<h2>商品清單</h2>

<a href="/Sale/AddItem" class="btn btn-success btn-lg"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span>&nbsp;&nbsp;<span>新增</span></a>

<table class="table table-hover table-bordered " style="margin-top: 10px">
    <thead>

        <tr>

            <th style="text-align:center;">料號</th>
            <th style="text-align:center;">名稱</th>
            <th style="text-align:center;">縮圖</th>
            <th style="text-align:center;">庫存</th>
            <th style="text-align:center;">編輯</th>


        </tr>

    </thead>
    <tbody>

        @foreach (var pro in Model)
        {
            <tr>

                <td style="font-size:20px;text-align:center;">@pro.ProductID</td>
                <td style="font-size:20px;text-align:center;">@pro.ProductName</td>
                <td style="font-size:20px;text-align:center;"><img style="height:100px;height:100px" src="@pro.ProductImageLocation" /></td>
                <td style="font-size:20px;text-align:center;">@pro.ProductQuantity</td>

                <td>
                    <div style="text-align:center;">
                        <a href="/Sale/EditItem/@pro.ProductID" class="btn btn-primary btn-md"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>&nbsp;&nbsp;<span>修改</span></a> |
                        <a href="/Sale/DeleteItem/@pro.ProductID" class="btn btn-danger btn-md"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span>&nbsp;&nbsp;<span>刪除</span></a>
                    </div>
                </td>

            </tr>

        }

    </tbody>
</table>

