@model List<pet_box.Models.Opinion>
@{
    ViewBag.Title = "Memberselect";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<h2 style="text-align:center;color:red">查看回應</h2>

<br />


<table class="table table-hover table-bordered " style="margin-top: 10px">
    <thead>

        <tr>

            <th style="text-align:center;">問題編號</th>
            <th style="text-align:center;">標題</th>
            <th style="text-align:center;">查看回應</th>

        </tr>

    </thead>
    <tbody>

        @foreach (var op in Model)
        {

            if (op.OpinionStatus == 1)
            {
                <tr>

                    <td style="text-align:center;">@op.OpinionID</td>
                    <td style="text-align:center;">@op.OpinionTitle</td>

                    <td>

                        <div style="text-align:center;">
                            <a href="/Customer/MemberSee/@op.OpinionID" class="btn btn-primary btn-md"><span class="" aria-hidden="true"></span><span>查看</span></a>
                        </div>


                    </td>

                </tr>
            }




        }

    </tbody>
</table>