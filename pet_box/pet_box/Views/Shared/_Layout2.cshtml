<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
<style>
body {
  margin: 0;
  font-family: 'Microsoft JhengHei';
}
</style>
    @*custom css style*@
    @RenderSection("IndexTop", required: false)
    @RenderSection("OptionalItemTop", required: false)
    @RenderSection("DeliveryInfoTop", required: false)

</head>
<body>

    <div class="navbar navbar-default navbar-fixed-top " style="background-color:blanchedalmond">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @*@Html.ActionLink("智慧寵物屋", "Index", "Customer", new { area = "" }, new { @class = "navbar-brand" })*@
                <ul class="nav navbar-nav">
                    <li style="left:85px;font-size:15px;">@Html.ActionLink("智慧寵物屋", "Index", "Customer")</li>
                </ul>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-right">


                    @*格式(1.顯示的名字 || 2.控制器裡面的Action || 3.控制器名稱) *@


                    @if (Session["Customer"] == null && Session["Employee"] == null)
                    {
                        <li>@Html.ActionLink("註冊", "Register", "Customer")</li>
                        <li>@Html.ActionLink("登入", "Login", "Customer")</li>
                        <li>@Html.ActionLink("購物車", "ShoppingCart", "OptionalItem")</li>
                    }

                    @if (Session["Customer"] != null)
                    {
                        <li>@Html.ActionLink("產品列表", "Index", "Customer")</li>
                        <li>@Html.ActionLink("客製化", "Index", "OptionalItem")</li>
                        <li>@Html.ActionLink("會員專區", "Member", "Customer")</li>
                        <li><a href="#">@Session["Welcome"]</a> </li>
                        <li>@Html.ActionLink("登出", "Logout", "Customer")</li>
                        <li>@Html.ActionLink("購物車", "ShoppingCart", "OptionalItem")</li>
                    }

                    @if (Session["Employee"] != null)
                    {
                        <li><a href="#">@Session["Welcome"]</a> </li>
                        <li>@Html.ActionLink("登出", "Logout", "Customer")</li>
                    }


                </ul>
            </div>
        </div>
    </div>




    <div class="container body-content">



        @RenderBody()



    </div>
    <hr />
    <ul class="nav navbar-nav navbar-right">
        <li><a href=""></a></li>
    </ul>

    <div class="container">

        <hr>

        <footer>
            <div class="row">
                <div class="col-lg-12">
                    <p>智慧寵物屋 &copy; 2018</p>
                </div>
            </div>
        </footer>

    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>
