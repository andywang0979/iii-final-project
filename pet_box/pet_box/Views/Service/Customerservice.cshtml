@model List<pet_box.Models.Opinion>
@{
    ViewBag.Title = "Customerservice";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}


<style>
    #title {
        text-align: center;
    }
</style>

<h3 id="title" style="color:red">(未回答)客戶問題列表</h3><br />

<table class="table table-hover table-bordered " style="margin-top: 10px;text-align:center" >
    <thead>
        <tr>
            <th class="col-md-6" style="text-align:center">問題編號</th>
            <th class="col-md-2" style="text-align:center">客戶問題</th>
            <th class="col-md-6" style="text-align:center">客服處理</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var emp in Model)
        {

            if (emp.OpinionStatus == 0)
            {
                <tr>
                    <td>@emp.OpinionID</td>
                    <td>@emp.OpinionTitle</td>
                    <td>

                        <div style="text-align:center">
                            <a href="/Service/Customerservice2/@emp.OpinionID" class="btn btn-primary btn-md"><span class="glyphicon glyphicon-pencil"></span>&nbsp;&nbsp;<span>點擊處理</span></a>
                        </div>
                    
                    </td>
                </tr>
            }


        }



    </tbody>
</table>






