
@{
    ViewBag.Title = "ShoppingCart";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

@model pet_box.Models.PartialListModel


<h2>您的購買清單</h2>

<form class="form-horizontal" method="post">
    <input id="prodId" name="returnUrl" type="hidden" value="@this.Request.UrlReferrer.PathAndQuery">

    <div>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th class="col-sm-4">產品名稱</th>
                    <th class="col-sm-2">數量</th>

                </tr>
            </thead>
            <tbody>

                @for (int i = 0; i < Model.PartialList.Count; i++) {

                    @*@Html.HiddenFor(m => m.PartialList[i].PartialListProductImgLocation)
                        @Html.HiddenFor(m => m.PartialList[i].PartialListProductName)
                        @Html.HiddenFor(m => m.PartialList[i].PartialListProductId)
                        @Html.HiddenFor(m => m.PartialList[i].PartialListProductBuyQuantity)*@


                    <input type="hidden" name="PartialList[@i].PartialListProductImgLocation" value="@Model.PartialList[i].PartialListProductImgLocation" />
                    <input type="hidden" name="PartialList[@i].PartialListProductName" value="@Model.PartialList[i].PartialListProductName" />
                    <input type="hidden" name="PartialList[@i].PartialListProductId" value="@Model.PartialList[i].PartialListProductId" />
                    <input type="hidden" name="PartialList[@i].PartialListProductUnitPrice" value="@Model.PartialList[i].PartialListProductUnitPrice" />
                    @*<input type="hidden" name="PartialList[@i].PartialListProductBuyQuantity" value="@Model.PartialList[i].PartialListProductBuyQuantity" />*@


                    <tr>
                        @*<td class="col-sm-4">@item.PartialListProductName</td>*@
                        <td class="col-sm-4">@Model.PartialList[i].PartialListProductName</td>
                        <td class="col-sm-6">
                            <span class="col-sm-3">
                                @*<label for="quantity">Height (metres):</label>*@
                                @*yourmodelprefix[0].PlanID*@
                                <input type="number" id="quantity" name="PartialList[@i].PartialListProductBuyQuantity"
                                       placeholder="" step="1" min="1" max=""
                                       value="@Model.PartialList[i].PartialListProductBuyQuantity" />

                            </span>
                            <span class="col-sm-9">

                                @*<a class="btn btn-danger glyphicon glyphicon-remove" href="/Test/CartItemDelete/@item.PartialListProductId"> 刪除</a>*@
                                <button id="deleteItem" name="deleteBtn" class="btn btn-danger" value="@Model.PartialList[i].PartialListProductId" formaction="/Test/CartItemDelete/@Model.PartialList[i].PartialListProductId" formmethod="post">刪除</button>
                            </span>
                        </td>

                    </tr>
                }
            </tbody>
        </table>

    </div>



    <fieldset>
        <!-- Button (Double) -->
        <div class="form-group">
            @*<label class="col-md-4 control-label" for="button1id">Double Button</label>*@
            <div class="col-md-8">
                @*<a href="javascript:history.back()" class="btn btn-primary btn-default"><span class="glyphicon glyphicon-arrow-left"></span> 繼續購買</a>*@
                <button id="button2id" name="okOrCancel" class="btn btn-info" value="continue"><span class="glyphicon glyphicon-arrow-left"></span> 繼續購買</button>
                <button id="button1id" name="okOrCancel" class="btn btn-success" value="ok">確認</button>

            </div>
        </div>

    </fieldset>
</form>
